<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffdab9"
    tools:context="com.example.opilane.memorygame.StartActivity">

    <ImageView
        android:id="@+id/uno"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/animal"/>


    <EditText
        android:id="@+id/mängija1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/nimi1"
        android:text="" />

    <Button
        android:id="@+id/mängi"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_weight="1"
        android:text="Alusta mängu" />

    <EditText
        android:id="@+id/mängija2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mängija1"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/nimi2"
        android:text="" />

    <ImageView
        android:id="@+id/dos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/animals"/>
</LinearLayout>
